<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abcd.projetcnam.ChoixDepartFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textLocation"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/choixDepart"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginTop="@dimen/hautBorderLocationFragment"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLocation"
        android:id="@+id/spinnerLocation"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/validateDepartButton"
        android:text="@string/valider"
        android:layout_below="@+id/textLocation"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/spinnerLocation"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        style="@style/bluebutton.petit"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanLocalisation"
        android:id="@+id/buttonScan"
        android:layout_below="@+id/spinnerLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
